<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="confirmPaymentVM" type="com.hotelbooking.app.modules.confirmpayment.data.viewmodel.ConfirmPaymentVM"/>
    </data>
    <LinearLayout android:id="@+id/linearConfirmPayment"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylegray_900">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarAppbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" app:contentInsetStart="0dp">
            <ImageView android:id="@+id/imageArrowleft"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_arrowleft"
                tools:ignore="ContentDescription" tools:src="@drawable/img_arrowleft"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtPayment"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{confirmPaymentVM.confirmPaymentModel.txtPayment}"
                style="@style/txtUrbanistromanbold24" tools:text="@string/lbl_payment"/>
            <ImageView android:id="@+id/imageQrcode"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_qrcode"
                tools:ignore="ContentDescription" tools:src="@drawable/img_qrcode"/>
        </androidx.appcompat.widget.Toolbar>
        <LinearLayout android:id="@+id/linearColumnrectanglefour"
            android:layout_height="0dp" android:layout_weight="1.0"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_27pxv"
            android:paddingEnd="@dimen/_24pxh"
            android:paddingStart="@dimen/_24pxh" android:paddingTop="@dimen/_27pxv">
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearRowrectanglefour"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_20pxh"
                android:paddingVertical="@dimen/_20pxv" style="@style/groupStyleblue_gray_900cornerRadius">
                <ImageView android:id="@+id/imageRectangleFour"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_100pxh"
                    android:layout_width="@dimen/_100pxh"
                    android:scaleType="fitXY"
                    cornerRadius="@{@dimen/_16pxh}"
                    imageRes="@{@drawable/img_rectangle4_100x100_4}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle4_100x100_4"/>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearColumnbulgariresort"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtBulgariResort"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtBulgariResort}"
                        style="@style/txtUrbanistromanbold20" tools:text="@string/lbl_bulgari_resort"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtCountry"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.01"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtCountry}"
                        style="@style/txtUrbanistregular14_1" tools:text="@string/lbl_paris_france"/>
                    <LinearLayout android:id="@+id/linearRowstar"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" android:orientation="horizontal">
                        <ImageView android:id="@+id/imageStar"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/_12pxh"
                            android:layout_width="@dimen/_12pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_star_12x12"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_star_12x12"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtFortyEight"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:letterSpacing="0.01"
                            android:singleLine="true"
                            android:text="@{confirmPaymentVM.confirmPaymentModel.txtFortyEight}"
                            style="@style/txtUrbanistsemibold14_1" tools:text="@string/lbl_4_8"/>
                        <TextView android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:id="@+id/txt4378reviews"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:letterSpacing="0.01"
                            android:singleLine="true"
                            android:text="@{confirmPaymentVM.confirmPaymentModel.txt4378reviews}"
                            style="@style/txtUrbanistregular12" tools:text="@string/lbl_4_378_reviews"/>
                    </LinearLayout>
                </LinearLayout>
                <FrameLayout android:id="@+id/frameGroup2213"
                    android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <LinearLayout android:gravity="end"
                    android:id="@+id/linearColumnprice"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPrice"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtPrice}"
                        style="@style/txtUrbanistromanbold24_1" tools:text="@string/lbl_27"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtNight"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.01"
                        android:singleLine="true"
                        android:text="@{confirmPaymentVM.confirmPaymentModel.txtNight}"
                        style="@style/txtUrbanistregular10" tools:text="@string/lbl_night"/>
                    <ImageView android:id="@+id/imageBookmark"
                        android:layout_height="@dimen/_24pxh"
                        android:layout_width="@dimen/_24pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_bookmark_24x24"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_bookmark_24x24"/>
                </LinearLayout>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:gravity="center_horizontal"
                android:id="@+id/recyclerListcheckin"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                itemSpace="@{@dimen/_28pxh}" tools:itemCount="2" tools:listitem="@layout/row_listcheckin"/>
            <LinearLayout android:id="@+id/linearRowfive"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_26pxv"
                android:paddingEnd="@dimen/_24pxh"
                android:paddingStart="@dimen/_24pxh"
                android:paddingTop="@dimen/_26pxv" style="@style/groupStyleblue_gray_7">
                <ImageView android:id="@+id/imageImageTwo"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_27pxh"
                    android:layout_width="@dimen/_44pxh"
                    android:scaleType="fitXY"
                    cornerRadius="@{@dimen/_4pxh}"
                    imageRes="@{@drawable/img_image_27x44_1}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_image_27x44_1"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtFive"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{confirmPaymentVM.confirmPaymentModel.txtFive}"
                    style="@style/txtUrbanistromanbold18" tools:text="@string/msg"/>
                <FrameLayout android:id="@+id/frameGroup2214"
                    android:layout_height="wrap_content" android:layout_width="wrap_content"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtChange"
                    android:layout_gravity="bottom"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="@{confirmPaymentVM.confirmPaymentModel.txtChange}"
                    style="@style/txtUrbanistsemibold16" tools:text="@string/lbl_change"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/rectangle_bg_cyan_600_01_radius_28"
            android:ellipsize="end" android:fontFamily="@font/urbanist"
            android:gravity="center"
            android:id="@+id/btnConfirmpaymentOne"
            android:layout_gravity="center_horizontal"
            android:layout_height="@dimen/_55pxv"
            android:layout_width="@dimen/_380pxh"
            android:letterSpacing="0.01"
            android:paddingBottom="@dimen/_16pxv"
            android:paddingEnd="@dimen/_125pxh"
            android:paddingStart="@dimen/_30pxh"
            android:paddingTop="@dimen/_16pxv" android:singleLine="true"
            android:text="@string/lbl_confirm_payment"
            android:textAllCaps="false"
            android:textColor="@color/white_A700"
            android:textFontWeight="700"
            android:textSize="@dimen/_16pxh" android:textStyle="bold" tools:text="@string/lbl_confirm_payment"/>
    </LinearLayout>
</layout>

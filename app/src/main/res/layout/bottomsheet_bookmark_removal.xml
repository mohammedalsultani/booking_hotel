<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="bookmarkRemovalVM" type="com.hotelbooking.app.modules.bookmarkremoval.data.viewmodel.BookmarkRemovalVM"/>
    </data>
    <LinearLayout android:id="@+id/linearColumn"
        android:layout_height="match_parent"
        android:layout_width="match_parent" android:orientation="vertical">
        <LinearLayout android:id="@+id/linearColumnframe"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_8pxv"
            android:paddingEnd="@dimen/_24pxh"
            android:paddingStart="@dimen/_24pxh"
            android:paddingTop="@dimen/_8pxv" style="@style/groupStylegray_900_01cornerRadius">
            <ImageView android:id="@+id/imageFrame"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_3pxh"
                android:layout_width="@dimen/_38pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_frame_gray_700"
                tools:ignore="ContentDescription" tools:src="@drawable/img_frame_gray_700"/>
            <TextView android:ellipsize="end"
                android:gravity="center_horizontal"
                android:id="@+id/txtRemovefromBookmark"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@{bookmarkRemovalVM.bookmarkRemovalModel.txtRemovefromBookmark}"
                style="@style/txtUrbanistromanbold24" tools:text="@string/msg_remove_from_boo"/>
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearRowrectanglefour"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/_20pxh"
                android:paddingVertical="@dimen/_20pxv" style="@style/groupStyleblue_gray_900cornerRadius">
                <ImageView android:id="@+id/imageRectangleFour"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_100pxh"
                    android:layout_width="@dimen/_100pxh"
                    android:scaleType="fitXY"
                    cornerRadius="@{@dimen/_16pxh}"
                    imageRes="@{@drawable/img_rectangle4_100x100_1}"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_rectangle4_100x100_1"/>
                <LinearLayout android:gravity="start"
                    android:id="@+id/linearColumnemeraldahotel"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtEmeraldaHotel"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{bookmarkRemovalVM.bookmarkRemovalModel.txtEmeraldaHotel}"
                        style="@style/txtUrbanistromanbold20" tools:text="@string/lbl_president_hotel"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtCountry"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.01"
                        android:singleLine="true"
                        android:text="@{bookmarkRemovalVM.bookmarkRemovalModel.txtCountry}"
                        style="@style/txtUrbanistregular14_1" tools:text="@string/lbl_paris_france"/>
                    <LinearLayout android:id="@+id/linearRowstar"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content" android:orientation="horizontal">
                        <ImageView android:id="@+id/imageStar"
                            android:layout_gravity="center_vertical"
                            android:layout_height="@dimen/_12pxh"
                            android:layout_width="@dimen/_12pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_star_12x12"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_star_12x12"/>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtFortyEight"
                            android:layout_gravity="center_vertical"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:letterSpacing="0.01"
                            android:singleLine="true"
                            android:text="@{bookmarkRemovalVM.bookmarkRemovalModel.txtFortyEight}"
                            style="@style/txtUrbanistsemibold14_1" tools:text="@string/lbl_4_8"/>
                        <TextView android:ellipsize="end"
                            android:gravity="center_vertical"
                            android:id="@+id/txt4378reviews"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:letterSpacing="0.01"
                            android:singleLine="true"
                            android:text="@{bookmarkRemovalVM.bookmarkRemovalModel.txt4378reviews}"
                            style="@style/txtUrbanistregular12" tools:text="@string/lbl_4_378_reviews"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout android:gravity="end"
                    android:id="@+id/linearColumnprice"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:orientation="vertical">
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPrice"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:singleLine="true"
                        android:text="@{bookmarkRemovalVM.bookmarkRemovalModel.txtPrice}"
                        style="@style/txtUrbanistromanbold24_1" tools:text="@string/lbl_35"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtNight"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:letterSpacing="0.01"
                        android:singleLine="true"
                        android:text="@{bookmarkRemovalVM.bookmarkRemovalModel.txtNight}"
                        style="@style/txtUrbanistregular10" tools:text="@string/lbl_night"/>
                    <ImageView android:id="@+id/imageBookmark"
                        android:layout_height="@dimen/_20pxh"
                        android:layout_width="@dimen/_16pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_bookmark_24x24"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_bookmark_24x24"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:gravity="center_vertical"
                android:id="@+id/linearRowcancel"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/rectangle_bg_gray_800_radius_29"
                    android:ellipsize="end"
                    android:fontFamily="@font/urbanist"
                    android:gravity="center" android:id="@+id/btnCancel"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_58pxv"
                    android:layout_width="@dimen/_184pxh"
                    android:letterSpacing="0.01"
                    android:paddingBottom="@dimen/_18pxv"
                    android:paddingEnd="@dimen/_16pxh"
                    android:paddingStart="@dimen/_16pxh"
                    android:paddingTop="@dimen/_18pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/white_A700"
                    android:textFontWeight="700"
                    android:textSize="@dimen/_16pxh"
                    android:textStyle="bold" tools:text="@string/lbl_cancel"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:background="@drawable/rectangle_bg_cyan_600_01_radius_29"
                    android:ellipsize="end"
                    android:fontFamily="@font/urbanist"
                    android:gravity="center" android:id="@+id/btnRemove"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_58pxv"
                    android:layout_width="@dimen/_184pxh"
                    android:letterSpacing="0.01"
                    android:paddingBottom="@dimen/_18pxv"
                    android:paddingEnd="@dimen/_16pxh"
                    android:paddingStart="@dimen/_16pxh"
                    android:paddingTop="@dimen/_18pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_remove"
                    android:textAllCaps="false"
                    android:textColor="@color/white_A700"
                    android:textFontWeight="700"
                    android:textSize="@dimen/_16pxh"
                    android:textStyle="bold" tools:text="@string/lbl_remove"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>

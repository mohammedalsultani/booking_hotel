<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="refundmethodRowModel" type="com.hotelbooking.app.modules.refundmethod.data.model.RefundmethodRowModel"/>
    </data>
    <LinearLayout android:id="@+id/linearRowreply"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_24pxh"
        android:paddingVertical="@dimen/_24pxv" style="@style/groupStyleblue_gray_7">
        <ImageView android:id="@+id/imageReply"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_32pxh"
            android:layout_width="@dimen/_32pxh"
            android:scaleType="fitXY" android:src="@drawable/img_reply"
            tools:ignore="ContentDescription" tools:src="@drawable/img_reply"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtPaymentmethod"
            android:layout_gravity="bottom"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@{refundmethodRowModel.txtPaymentmethod}"
            style="@style/txtUrbanistromanbold18" tools:text="@string/lbl_paypal"/>
        <FrameLayout android:id="@+id/frameGroup2188"
            android:layout_height="wrap_content" android:layout_width="wrap_content"/>
        <ImageView android:id="@+id/imageContrast"
            android:layout_gravity="center_vertical"
            android:layout_height="@dimen/_20pxh"
            android:layout_width="@dimen/_20pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_contrast"
            tools:ignore="ContentDescription" tools:src="@drawable/img_contrast"/>
    </LinearLayout>
</layout>

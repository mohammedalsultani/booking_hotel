<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="hoteldetailsRowModel" type="com.hotelbooking.app.modules.hoteldetails.data.model.HoteldetailsRowModel"/>
    </data>
    <LinearLayout android:gravity="start"
        android:id="@+id/linearColumnellipseone"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_22pxv"
        android:paddingEnd="@dimen/_24pxh"
        android:paddingStart="@dimen/_24pxh"
        android:paddingTop="@dimen/_22pxv" style="@style/groupStyleblue_gray_900cornerRadius">
        <LinearLayout android:id="@+id/linearRowellipseone"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" android:orientation="horizontal">
            <ImageView android:id="@+id/imageEllipseOne"
                android:layout_gravity="center_vertical"
                android:layout_height="@dimen/_48pxh"
                android:layout_width="@dimen/_48pxh"
                android:scaleType="centerCrop" circular="@{true}"
                imageRes="@{@drawable/img_ellipse1_48x48}"
                tools:ignore="ContentDescription" tools:src="@drawable/img_ellipse1_48x48"/>
            <LinearLayout android:gravity="start"
                android:id="@+id/linearColumnname"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="vertical">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtName"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="@{hoteldetailsRowModel.txtName}"
                    style="@style/txtUrbanistromanbold16_1" tools:text="@string/lbl_jenny_wilson"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtDate"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="@{hoteldetailsRowModel.txtDate}"
                    style="@style/txtUrbanistromanmedium12_1" tools:text="@string/lbl_dec_10_2024"/>
            </LinearLayout>
            <FrameLayout android:id="@+id/frameGroup2284"
                android:layout_height="wrap_content" android:layout_width="wrap_content"/>
            <LinearLayout android:id="@+id/linearRowrating"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/_7pxv"
                android:paddingEnd="@dimen/_16pxh"
                android:paddingStart="@dimen/_16pxh"
                android:paddingTop="@dimen/_7pxv" style="@style/groupStylecyan_600_01cornerRadius">
                <ImageView android:id="@+id/imageStar"
                    android:layout_gravity="center_vertical"
                    android:layout_height="@dimen/_12pxh"
                    android:layout_width="@dimen/_12pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_star"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_star"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtRating"
                    android:layout_gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:letterSpacing="0.01"
                    android:singleLine="true"
                    android:text="@{hoteldetailsRowModel.txtRating}"
                    style="@style/txtUrbanistsemibold14" tools:text="@string/lbl_5"/>
            </LinearLayout>
        </LinearLayout>
        <TextView android:id="@+id/txtReview"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:letterSpacing="0.01"
            android:text="@{hoteldetailsRowModel.txtReview}"
            style="@style/txtUrbanistregular14" tools:text="@string/msg_very_nice_and_c"/>
    </LinearLayout>
</layout>
